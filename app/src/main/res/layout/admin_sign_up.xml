<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".login.admin_signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize">

            <View
                android:id="@+id/middle"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="1dp"
                android:background="#000000" />

            <View
                android:id="@+id/middle_hr"
                android:layout_width="1dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sgp" />

            </RelativeLayout>

            <EditText
                android:id="@+id/sign_name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/rel"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corner"
                android:padding="8dp"
                android:hint="Name"
                android:inputType="textPersonName|textCapWords"
                android:textColorHint="#000000"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_person"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:textColor="#000000"/>



            <EditText
                android:id="@+id/sign_email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sign_name"
                android:background="@drawable/rounded_corner"
                android:layout_marginTop="20dp"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:hint="Email"
                android:textColorHint="#000000"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_email"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/signup_number"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sign_email"
                android:background="@drawable/rounded_corner"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Phone Number"
                android:inputType="number"
                android:textColorHint="#000000"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_phone"
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:maxLength="10"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/activation_code"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/signup_number"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corner"
                android:padding="8dp"
                android:hint="Activation Code"
                android:inputType="textPersonName|textCapWords"
                android:textColorHint="#000000"
                android:layout_marginBottom="20dp"
                android:drawableStart="@drawable/ic_lock"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^*() "
                android:paddingTop="10dp"
                android:drawablePadding="8dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/sign_up_pass"
                android:layout_below="@+id/activation_code"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corner"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="password"
                android:inputType="textPassword"
                android:textColorHint="#000000"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="8dp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/pass_view_img"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/sign_up_pass"
                android:layout_alignTop="@+id/sign_up_pass"
                android:layout_alignEnd="@+id/sign_up_pass"
                android:layout_alignBottom="@+id/sign_up_pass"
                android:layout_marginStart="249dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_eye" />

            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/sign_up_pass"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="31dp"
                android:backgroundTint="@color/red"
                android:text="Sign Up"
                android:textSize="18sp"
                app:cornerRadius="20dp" />


            <ProgressBar
                android:id="@+id/progrssbar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/sign_up_pass"
                android:layout_alignStart="@+id/sign_up_button"
                android:layout_alignEnd="@+id/sign_up_button"
                android:layout_marginStart="126dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="126dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/login_txt"
                android:layout_alignParentBottom="true"
                android:textColor="#FFFFFF"
                android:text="@string/login_txt"
                android:layout_below="@+id/sign_up_button"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>



        </RelativeLayout>

    </ScrollView>


</RelativeLayout>