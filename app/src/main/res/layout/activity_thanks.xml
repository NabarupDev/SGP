<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Thanks">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/middle"
        android:layout_marginBottom="50sp"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        app:lottie_rawRes="@raw/payment_complete" />

    <View
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="1dp"/>

    <View
        android:id="@+id/middle_hr"
        android:layout_width="1dp"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent"/>


    <RelativeLayout
        android:id="@+id/payment_rupee"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rupees"
            android:text="â‚¹10.00"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="35sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/paid_to"
            android:layout_below="@+id/rupees"
            android:text="Paid to Aviator "
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="UPI ID: aviator@oksbi"
            android:layout_below="@+id/paid_to"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/date_time"
        android:layout_marginTop="30sp"
        android:layout_below="@+id/payment_rupee"
        android:layout_width="match_parent"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_centerHorizontal="true"
        android:layout_height="130sp">
        <View
            android:id="@+id/middle_tr"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="1dp"/>

        <View
            android:id="@+id/middle_hr_tr"
            android:layout_width="1dp"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/date"
            android:text="00 Month Year,"
            android:layout_toLeftOf="@+id/middle_hr_tr"
            android:layout_marginEnd="0sp"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:visibility="gone"
            android:gravity="end"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/time"
            android:text="00:00 am"
            android:layout_marginStart="10sp"
            android:layout_toRightOf="@+id/middle_hr_tr"
            android:textColor="#000000"
            android:gravity="start"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/nd_txt"
            android:text="Your payment method has been added successfully and will be debited within few time"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/upi_id"
            android:layout_below="@+id/nd_txt"
            android:layout_centerHorizontal="true"
            android:text="UPI transaction ID: 462973610454"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="20sp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Your payment will be delivered within 6 to 12 hours "
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/copy_container"
            android:background="@drawable/edittext_border"
            android:layout_below="@+id/upi_id"
            android:layout_width="180sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="20sp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="D8CZZGQ2"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:textSize="18sp" />
                <View
                    android:id="@+id/middle_code"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/copy"
                    android:layout_height="1dp"/>

                <View
                    android:id="@+id/middle_hr_code"
                    android:layout_width="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/copy"
                    android:layout_centerVertical="true"
                    android:layout_width="18sp"
                    android:layout_toRightOf="@+id/copy"
                    android:layout_centerHorizontal="true"
                    android:layout_height="18sp"/>

            </RelativeLayout>




            <TextView
                android:id="@+id/activation_code"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="D8CZZGQ2"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="gone"
                android:background="@drawable/edittext_border"
                android:padding="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/rd_home"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_below="@id/date_time"
        android:textColor="#EA0000"
        android:textSize="18sp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50sp"
        android:drawablePadding="20sp"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="30dp"
        android:drawableEnd="@drawable/correct"
        android:layout_centerVertical="true"
        app:cornerRadius="10dp"
        android:text="Done"/>


    <ProgressBar
        android:id="@+id/progrssbar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/date_time"
        android:layout_marginEnd="31dp"
        android:visibility="invisible"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/pinTextView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/bank"
        android:layout_below="@+id/pinTextView"
        android:layout_width="wrap_content"
        android:layout_marginTop="30sp"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/phonenum"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        android:layout_marginTop="30sp"
        android:layout_below="@+id/bank"
        android:layout_height="wrap_content"/>

</RelativeLayout>