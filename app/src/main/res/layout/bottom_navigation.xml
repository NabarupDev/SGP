<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentBottom="true"
    android:background="#FFFFFF"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="20dp">

            <RelativeLayout
                android:id="@+id/payment_bellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Total Payment TextView -->



                <RelativeLayout
                    android:id="@+id/total_pay_card"
                    android:layout_width="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_height="60sp">
                    <TextView
                        android:id="@+id/total_pay_txt"
                        android:text="Total Payment:"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_height="wrap_content">

                        <!-- Total Amount TextView -->
                        <TextView
                            android:id="@+id/total_amount_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="37dp"
                            android:gravity="center"
                            android:text="â‚¹10.00"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <!-- View Price Details TextView -->
                        <TextView
                            android:id="@+id/pay_details"
                            android:layout_below="@+id/total_amount_txt"
                            android:text="@string/view_price_details"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </RelativeLayout>



                <!-- Pay Button -->
                <Button
                    android:id="@+id/pay_btn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30sp"
                    android:text="Pay"
                    android:layout_below="@+id/total_pay_card"
                    android:layout_width="150dp"
                    android:textSize="18sp"
                    android:backgroundTint="#068548"
                    app:cornerRadius="20dp"
                    android:drawableEnd="@drawable/ic_process"
                    android:layout_height="60dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>