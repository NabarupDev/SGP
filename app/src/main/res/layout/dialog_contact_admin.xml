<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You need to activate Aviator Predictor v4.0. For this, you need to contact Aviator Predictor Admin or pay 10 rupee for get activation code.\n\nP.S. THE ACTIVATION IS PAID."
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/contact_admin_button"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:background="@drawable/no_border_button"
            android:layout_height="wrap_content"
            android:text="Contact admin" />

        <TextView
            android:id="@+id/pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:background="@drawable/edittext_border"
            android:text="Pay only 10 rupee for get the activation code"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
