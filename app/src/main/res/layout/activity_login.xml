<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".login.Login">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <View
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="1dp" />

        <View
            android:id="@+id/middle_hr"
            android:layout_width="1dp"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginTop="50sp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:src="@drawable/sgp"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/login_email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/middle"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="40dp"
            android:padding="8dp"
            android:hint="Email"
            android:textColorHint="#000000"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_person"
            android:paddingTop="10dp"
            android:drawablePadding="8dp"
            android:textColor="#000000"/>


        <EditText
            android:id="@+id/login_pass"
            android:layout_below="@+id/login_email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="password"
            android:inputType="textPassword"
            android:textColorHint="#000000"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="8dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/forgot_pass"
            android:layout_below="@+id/login_pass"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:textColor="#FFFFFF"
            android:text="Forgot password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/login_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/forgot_pass"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="31dp"
            android:backgroundTint="@color/red"
            android:text="Login"
            android:textSize="18sp"
            app:cornerRadius="20dp" />


        <ProgressBar
            android:id="@+id/progrssbar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/forgot_pass"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="31dp"
            android:visibility="invisible"
            android:textSize="18sp"
            app:cornerRadius="20dp" />


        <TextView
            android:id="@+id/adminRedirectText"
            android:text="@string/admin_signup_txt"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/login_button"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/signupRedirectText"
            android:text="@string/sign_up_txt"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_below="@+id/adminRedirectText"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>